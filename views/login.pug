extends layout

block content
  .notification
    if error
      h3 #{error}

  form(method='POST' action=`/login`)
    div
      label(for='username') Username:
      input#title(name='username', type='text')
    div
      label(for='password') Password:
      input#title(name='password', type='text')
    button(type='submit') Login

