extends layout

block content
  h1 GoCon Talks from Papercall
  hl
  h2 Talks assigned to me
  if mine.length == 0
    p Nothing yet!
  else
    h3 Talks I must review
    if pending.length == 0
      p You've done all your homework! Hurrah!
    else
      p Remaining: #{pending.length}
      ul
        each talk in pending
          li
            a(href=`/proposals/${talk.id}`) [##{talk.id}] #{talk.title}


  br
  h3 Talks I have reviewed
  p Total: #{completed.length}
  ul
    each talk in completed
      li
        a(href=`/proposals/${talk.id}`) [##{talk.id}] #{talk.title}
  br
  h3 All talks:
  p Total submissions: #{talks.length}
  ul
    each talk in talks
      li
        a(href=`/proposals/${talk.id}`) [##{talk.id}] #{talk.title}
